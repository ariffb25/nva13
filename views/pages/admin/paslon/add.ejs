<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../../../partial/head.ejs', { title : `${title}`, cannonical:
    `${cannonical}` }) %>
    <link rel="stylesheet" href="/css/paslon-form.css" />
  </head>
  <body>
    <%- include('../../../partial/Navbar/Paslon.ejs') %>
    <div class="container mt-3">
      <div class="row">
        <div class="col">
          <h1 class="text-center">Tambah Paslon Baru</h1>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col col-md-7">
          <div class="card">
            <div class="card-body">
              <% if (messages.error) { %>
              <div
                class="alert alert-danger alert-dismissible fade show"
                role="alert"
              >
                <strong>Error !</strong> <%= messages.error %>
                <button
                  type="button"
                  class="close"
                  data-dismiss="alert"
                  aria-label="Close"
                >
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <% } %>
              <form
                action="/admin/paslon/tambah"
                method="POST"
                enctype="multipart/form-data"
                id="paslon-add"
              >
                <div class="form-group">
                  <label for="Ketua">Nama Ketua</label>
                  <input
                    type="input"
                    class="form-control"
                    name="nameKetua"
                    id="Ketua"
                    placeholder="Masukan Nama Ketua"
                  />
                </div>
                <div class="form-group">
                  <label for="Waketu">Nama Wakil Ketua</label>
                  <input
                    type="input"
                    class="form-control"
                    id="Waketu"
                    name="nameWaketu"
                    placeholder="Masukan Nama Wakil Ketua"
                  />
                </div>
                <div class="form-group">
                  <label for="gambarPaslon">Gambar Paslon</label>
                  <div class="custom-file">
                    <input
                      type="file"
                      class="custom-file-input"
                      id="gambarPaslon"
                      name="gambarPaslon"
                      accept="image/*"
                    />
                    <label class="custom-file-label" for="gambarPaslon"
                      >Pilih gambar</label
                    >
                  </div>
                </div>
                <div class="form-group">
                  <button class="btn btn-primary btn-block">
                    Tambah Paslon
                  </button>
                </div>
                <div class="form-group text-center">
                  <a href="/admin/paslon">Kembali</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../../../partial/BSreqValid.ejs') %>
    <script src="/js/admin/paslon/add.js"></script>
  </body>
</html>
